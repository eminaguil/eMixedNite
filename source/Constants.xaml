	<sys:Boolean x:Key="GameOverviewFullScroll">False</sys:Boolean> <!-- Values: True False  -->
    <sys:Boolean x:Key="ThFeaturesAtTop">True</sys:Boolean> <!-- Values: True False  --> 
    <sys:Double x:Key="DetailsViewLogoMaxWidth">320</sys:Double>
